<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary"
            app:title="Articles"
            app:titleTextColor="@android:color/white"
            app:navigationIcon="@android:drawable/ic_menu_revert"/>

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- Category Filter Chips -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:scrollbars="none">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupCategories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleSelection="true"
                app:chipSpacing="8dp">
                <com.google.android.material.chip.Chip
                    android:id="@+id/chipAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="All"
                    android:checked="true"
                    style="@style/Widget.Material3.Chip.Filter"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipAnxiety"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Anxiety"
                    style="@style/Widget.Material3.Chip.Filter"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipDepression"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Depression"
                    style="@style/Widget.Material3.Chip.Filter"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipBPD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BPD"
                    style="@style/Widget.Material3.Chip.Filter"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipOCD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OCD"
                    style="@style/Widget.Material3.Chip.Filter"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipADHD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ADHD"
                    style="@style/Widget.Material3.Chip.Filter"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipSchizophrenia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Schizophrenia"
                    style="@style/Widget.Material3.Chip.Filter"/>

            </com.google.android.material.chip.ChipGroup>
        </HorizontalScrollView>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"/>

        <!-- Articles RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvArticles"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"/>

    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>